@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model hotsAPI.Models.GameNews
<style>
select 
{
    font-size:1.2em;
    margin: 5px 0 6px;
    padding: 5px;
    width: 300px;
} 
</style>
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
             <hgroup class="title">
                <h1>添加新记录</h1>                    
            </hgroup>  
               
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix">
        @using (Html.BeginForm())
        {
            @Html.DisplayNameFor(news => news.From)  
            @Html.DropDownList("From",ViewData["FromList"] as SelectList,"请选择")
            @Html.ValidationMessageFor(news => news.From)
            <br />
            @Html.DisplayNameFor(news => news.Type)  
            @Html.DropDownList("Type", ViewData["TypeList"] as SelectList, "请选择")
            @Html.ValidationMessageFor(news => news.Type)
            <br />
            @Html.DisplayNameFor(news => news.Title)  
            @Html.TextBox("Title")
            @Html.ValidationMessageFor(news => news.Title)
            <br />
            @Html.DisplayNameFor(news => news.WebSite1)  
            @Html.TextBox("WebSite1")
            @Html.ValidationMessageFor(news => news.WebSite1)
            <br />
            @Html.DisplayNameFor(news => news.Link1)  
            @Html.TextBox("Link1")
            @Html.ValidationMessageFor(news => news.Link1)
            <br />
            @Html.DisplayNameFor(news => news.WebSite2)  
            @Html.TextBox("WebSite2")
            @Html.ValidationMessageFor(news => news.WebSite2)
            <br />
            @Html.DisplayNameFor(news => news.Link2)  
            @Html.TextBox("Link2")
            @Html.ValidationMessageFor(news => news.Link2)
            <br />
            @Html.DisplayNameFor(news => news.IssueDate)  
            @Html.TextBox("IssueDate")
            @Html.ValidationMessageFor(news => news.IssueDate)
            <br />
            <input type="submit" />
        }
    </section>
</div>
