@{
    ViewBag.Title = "AddHero";
}
@model hotsAPI.Models.Hero
<h2>AddHero</h2>
@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>*@
@{ Html.EnableClientValidation(true); }

@using (Html.BeginForm("add", "api"))
{
    @Html.DisplayNameFor(hero => hero.Name)  
    @Html.TextBox("Name")
    @Html.ValidationMessageFor(hero => hero.Name)
    <br />
    @Html.DisplayNameFor(hero => hero.Life)  
    @Html.TextBox("Life")
    @Html.ValidationMessageFor(hero => hero.Life)
    <br />
    @Html.DisplayNameFor(hero => hero.LifeRestore)  
    @Html.TextBox("LifeRestore")
    @Html.ValidationMessageFor(hero => hero.LifeRestore)
    <input type="submit" />
}
<input type="button" id="btn" />
<script type="text/javascript">
    $('#btn').click(function () {
        var hero = {Name:"da", Life: "ad",LifeRestore:44};
        $.ajax({
            url: '@Url.Action("Add","api")',
            type: 'post',
            data: JSON.stringify(hero),
            contentType: "application/json",
            success: function (data) {
                alert(data);
            }
        });
    })
</script>