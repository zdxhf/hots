<script type="text/javascript">
    function title(msg)
    {
        return "<span>类型：" + msg.Type + "<span>发布时间：" + msg.Date + "</span><span>来源：" + msg.From + "</span><span><a target='blank' href='" + msg.Link + "'>详细</a>";
    }
    $('#navPre').click(function () {
        var no = Number($('#newsNo').html()) +1;
        update();
        $.ajax({
            url: 'api/Nav',
            type: 'get',
            data: { act: no },
            success: function (msg) {
                $('#newsTitle').html(title(msg));
                $('#news').html(msg.Content);
                $('#newsNo').html(msg.ID);
                compareNo(msg.ID);
            },
            error: function (err) {
                $('#news').html('Error: ' + err);
            }
        });
    });

    $('#navNex').click(function () {
        update();
        var no = Number($('#newsNo').html()) - 1;
        $.ajax({
            url: 'api/Nav',
            type: 'get',
            data: { act: no },
            success: function (msg) {
                $('#newsTitle').html(title(msg));
                $('#news').html(msg.Content);
                $('#newsNo').html(msg.ID);
                compareNo(msg.ID);
            },
            error: function (err) {
                $('#news').html('Error: ' + err);
            }
        });
    });
function update() {
    $('#news').append('<div id="loading"><div id="iron"></div>');
};
$(document).ready(function () {
    update();
    $.ajax({
        url: 'api/getLastNews',
        type: 'get',
        success: function (msg) {
            $('#newsTitle').html(title(msg));
            $('#news').html(msg.Content);
            $('#newsNo').html(msg.ID);
            $('#newsNoMax').html(msg.ID);
            $('#navPre').hide();
        },
        error: function (err) {
            $('#news').html('Error: ' + err);
        }
    });
});
function compareNo(no) {
    $('#navPre').show();
    $('#navNex').show();
    var noMax = $('#newsNoMax').html();
    if (no == 1) {
        $('#navNex').hide();
    }
    if (no == noMax) {
        $('#navPre').hide();
    }
}
